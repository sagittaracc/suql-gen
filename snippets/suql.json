{
    "Create a SuQL config": {
        "prefix": "!suql-config",
        "description": "",
        "body": [
            "[",
            "    '${1:connection-name}' => [",
            "        'driver' => '${2:mysql}',",
            "        'host'   => '${3:localhost}',",
            "        'dbname' => '${4:dbname}',",
            "        'user'   => 'root',",
            "        'pass'   => '',",
            "    ],",
            "];"
        ]
    },
    "Create a SuQL model": {
        "prefix": "!suql-model",
        "description": "",
        "body": [
            "class ${1:ModelName} extends suql\\syntax\\SuQL",
            "{",
            "    public function table()",
            "    {",
            "        return '${2:tableName}';",
            "    }",
            "",
            "    public function fields()",
            "    {",
            "        return [];",
            "    }",
            "",
            "    public function getDb()",
            "    {",
            "        return suql\\db\\Container::get('${3:db-connection}');",
            "    }",
            "",
            "    public function create()",
            "    {",
            "        return",
            "            $this->column('${4:columnName}')",
            "                ->setType(${5|'int','varchar'|})",
            "                ->setLength($6)",
            "                ->setDefault($7);",
            "    }",
            "}"
        ]
    },
    "Connection to database": {
        "prefix": "!suql-connect",
        "description": "",
        "body": "suql\\db\\Container::create($1);"
    },
    "Fetch all the data from a model": {
        "prefix": "!suql-fetch",
        "description": "",
        "body": [
            "${1:ModelName}::all()",
            "    ->fetchAll();"
        ]
    }
}